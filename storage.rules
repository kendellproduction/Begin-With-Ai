rules_version = '2';

// Firebase Storage Rules for BeginningWithAi
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read lesson media
    match /lessons/{allPaths=**} {
      allow read: if true; // Allow public read access for lesson content
      allow write: if request.auth != null && 
                      request.auth.token.admin == true; // Only admin users can upload
    }
    
    // Allow authenticated users to upload profile images
    match /profile-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
                            request.auth.uid == userId;
    }
    
    // Temporary uploads for admins
    match /temp/{allPaths=**} {
      allow read, write: if request.auth != null && 
                            request.auth.token.admin == true;
    }
  }
}
